<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/viewBackground"
    android:orientation="vertical"
    android:padding="@dimen/xf_px_20">

    <TextView
        android:id="@+id/tv_nav_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/item_title"
        android:textSize="@dimen/xf_px_32" />

    <com.donkingliang.labels.LabelsView
        android:id="@+id/labels_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/xf_px_20"
        app:isIndicator="true"
        app:labelBackground="@color/xf_Grey300"
        app:labelTextPaddingBottom="@dimen/xf_px_20"
        app:labelTextPaddingLeft="@dimen/xf_px_20"
        app:labelTextPaddingRight="@dimen/xf_px_20"
        app:labelTextPaddingTop="@dimen/xf_px_20"
        app:labelTextSize="14sp"
        app:lineMargin="10dp"
        app:maxLines="0"
        app:maxSelect="5"
        app:minSelect="1"
        app:wordMargin="@dimen/xf_px_20" />

</LinearLayout>


